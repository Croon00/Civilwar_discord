name: Monitor and Push DB Changes

on:
  push:
    branches:
      - main

jobs:
  monitor_and_push_db_changes:
    runs-on: ubuntu-latest
    
    steps:
    - name: Checkout Repository
      uses: actions/checkout@v2
      
    - name: Run Docker Container
      run: docker run --name my_container -d -v $(pwd):/app your_image_name
      
    - name: Monitor DB Changes and Push
      run: |
        while inotifywait -e modify /app/civilwar_user.db; do
            git add /app/civilwar_user.db
            git commit -m "Update database"
            git push origin main
        done
